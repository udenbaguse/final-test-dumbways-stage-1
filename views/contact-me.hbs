<section id="contact-me" class="py-5 border-top border-secondary-subtle">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">
        <h2 class="section-title fw-bold mb-3">Contact Me</h2>
        <p class="text-secondary mb-4">
          Interested in collaborating, discussing a project, or just saying hello? Send a message through this form.
        </p>

        <div
          id="contactAlert"
          class="alert d-none"
          role="alert"
          aria-live="polite"
        ></div>

        <form id="contactForm" class="p-4 rounded-4 border border-secondary-subtle bg-body contact-form-card" action="#" method="post" novalidate>
          <div class="row g-3">
            <div class="col-12 col-md-6">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Full name" />
            </div>

            <div class="col-12 col-md-6">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="name@email.com" />
            </div>
          </div>

          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" name="message" rows="5" placeholder="Write your message here"></textarea>
          </div>

          <button type="submit" class="btn btn-contact-submit px-4 w-100 w-sm-auto">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>
