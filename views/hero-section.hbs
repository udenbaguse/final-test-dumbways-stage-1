<main class="container py-5">
  <section class="row g-4 align-items-center">
    <div class="col-12 col-lg-4 text-center">
      <img
        class="img-fluid rounded-circle border border-3 shadow hero-profile-image"
        src="https://ik.imagekit.io/udenbaguse/photo-profile-removebg-preview.png"
        alt="Profile photo"
      />
    </div>

    <div class="col-12 col-lg-8">
      <h1 class="display-4 fw-bold mb-3">Hi, I'm <span class="font-name">{{profile.name}}</span></h1>
      <h2 class="h3 hero-title mb-3">{{profile.title}}</h2>
      <p class="lead text-secondary fw-medium mb-4">{{profile.bio}}</p>

      <ul class="list-unstyled fw-bold hero-meta mb-4">
        <li class="mb-2">Location: {{profile.location}}</li>
        <li>Status: {{profile.status}}</li>
      </ul>

      <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-contact-submit px-4" href="#my-projects">
          <i class="bi bi-grid-1x2-fill me-2" aria-hidden="true"></i>View Projects
        </a>
      </div>
    </div>
  </section>
</main>
