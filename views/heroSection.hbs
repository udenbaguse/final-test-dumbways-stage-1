<main class="container py-5">
  <section class="row g-4 align-items-center">
    <div class="col-12 col-lg-4 text-center">
      <img
        class="img-fluid rounded-circle border border-3 shadow hero-profile-image"
        src="https://ik.imagekit.io/udenbaguse/photo-profile.jpg?updatedAt=1769936370813"
        alt="Profile photo"
      />
    </div>

    <div class="col-12 col-lg-8">
      <h1 class="display-4 fw-bold mb-3">Hi, I'm {{profile.name}}</h1>
      <h2 class="h3 text-primary mb-3">{{profile.title}}</h2>
      <p class="lead text-secondary fw-medium mb-4">{{profile.bio}}</p>

      <ul class="list-unstyled text-info mb-4">
        <li class="mb-2">Location: {{profile.location}}</li>
        <li>Status: {{profile.status}}</li>
      </ul>

      <div class="d-flex flex-wrap gap-2">
        <a class="btn btn-success" href="https://discord.com/users/992728752188567592" target="_blank" rel="noopener noreferrer">Let's Talk</a>
        <a class="btn btn-warning" href="#">Download CV</a> 
      </div>
    </div>
  </section>
</main>

